@using System.Threading.Tasks
@using ProjectPaula.Model.CalendarExport
<div id="shareDialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kommilitonen einladen</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <h4>Plane dein Semester mit Freunden</h4>
                <p>Lade Kommilitonen ein, um gemeinsam am Stundenplan zu arbeiten, indem du ihnen folgenden Link sendest:</p>
                @{
                    var request = HttpHelper.HttpContext.Request;
                    var scheme = request.Scheme;
                    var host = request.Host;
                }
                <code id="shareLink">@scheme://@host/?ScheduleId={{vm.sync.SharedSchedule.Id}}</code>
                <button type="button" class="btn" ngclipboard data-clipboard-target="#shareLink">
                    <span aria-hidden="true" class="glyphicon glyphicon-copy"></span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Schließen</button>
            </div>
        </div>
    </div>
</div>